{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": 
  {
    "moduleSuffixes": [".native", ".ios", ".android", ".web", ""],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./client/*"],
      "@shared/*": ["./shared/*"]
    },
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
}
