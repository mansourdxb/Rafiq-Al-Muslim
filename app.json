{
  "expo": {
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0891b2"
    },
    "name": "رفيق المسلم",
    "slug": "tasbih",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "tasbih",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/icon.png",
      "bundleIdentifier": "com.mansour.tasbeehcounter",
      "buildNumber": "2",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "We use your location to show Qibla direction and prayer times for your city.",
        "NSLocationAlwaysUsageDescription": "We use your location to show Qibla direction and prayer times for your city.",
        "CFBundleDisplayName": "رفيق المسلم",
        "NSUserNotificationsUsageDescription": "We use notifications to remind you of prayer times."
      }
    },
    "android": {
      "package": "com.mansour.tasbeehcounter",
      "versionCode": 2,
      "icon": "./assets/icon.png",
      "adaptiveIcon": {
        "backgroundColor": "#0891b2",
        "foregroundImage": "./assets/images/icon.png"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "نحتاج إلى موقعك لتحديد اتجاه القبلة بدقة."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0891b2",
          "dark": {
            "image": "./assets/images/splash.png",
            "backgroundColor": "#1A1D23"
          }
        }
      ],
      "expo-web-browser",
      "expo-font",
      "expo-localization"
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "7a809db6-795e-44f0-8d25-8c1a16172261"
      }
    }
  }
}
